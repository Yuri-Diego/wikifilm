generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Favorite {
  id            Int      @id @default(autoincrement())
  tmdbMovieId   Int      @unique @map("tmdb_movie_id")
  title         String
  posterPath    String?  @map("poster_path")
  backdropPath  String?  @map("backdrop_path")
  rating        Float?
  year          String?
  overview      String?
  releaseDate   String?  @map("release_date")
  runtime       Int?
  genres        String[]

  @@map("favorites")
}

model ShareLink {
  id         Int      @id @default(autoincrement())
  shareId    String   @unique @map("share_id")
  moviesData Json     @map("movies_data")
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("share_links")
}